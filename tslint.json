{
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "semi": false,
        "printWidth": 120,
        "tabWidth": 2,
        "bracketSpacing": true,
        "trailingComma": "es5"
      }
    ]
  }
}
